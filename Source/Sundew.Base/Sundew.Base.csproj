<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;netstandard1.2</TargetFrameworks>
    <Company>Hukano</Company>
    <Authors>Kim Hugener-Ohlsen</Authors>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Deterministic>true</Deterministic>
    <DebugSymbols>false</DebugSymbols>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <DebugType>None</DebugType>
    <NoWarn>NU5128</NoWarn>
    <PackageReleaseNotes>7.0 All in one package including:
Sundew.Base.Collections
Sundew.Base.Disposal
Sundew.Base.Equality
Sundew.Base.Initialization
Sundew.Base.Memory
Sundew.Base.Primitives
Sundew.Base.Reporting
Sundew.Base.Text
Sundew.Base.Threading.Jobs
Sundew.Base.Threading
Sundew.Base.Timers</PackageReleaseNotes>
    <Description>Common extension methods and reusable concepts</Description>
    <Configurations>Debug;Release;Debug-Publish;Release-Publish</Configurations>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Kim Hugener-Ohlsen</Copyright>
    <DocumentationFile>$(OutputPath)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug-Publish|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <SppSourceName>default</SppSourceName>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <WarningsAsErrors />
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release-Publish|AnyCPU'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <WarningsAsErrors />
    <SppSourceName>local-stable</SppSourceName>
  </PropertyGroup>

